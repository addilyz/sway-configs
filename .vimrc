
set nocompatible

filetype on

filetype plugin on

filetype indent on

syntax on

set number

set cursorline
set cursorcolumn

set shiftwidth=3
set tabstop=3

set nobackup

set scrolloff=10
set nowrap

set incsearch
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set history=1000

set wildmenu

set wildmode=list:longest

set wildignore=*.docx,*.pdf,*.exe
